{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "vendor",
    "src/config/normalize.ts",
    "src/core/agent-instance.ts",
    "src/core/agent-manager.ts",
    "src/routing/**/*"
  ]
}

